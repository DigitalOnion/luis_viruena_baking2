<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/stepMargin"
        tools:context=".SplashActivity">

        <ImageView
            android:id="@+id/logo"
            android:src="@drawable/ic_cake"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintVertical_bias="0.4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/splash_text_title"
            style="@style/splash_title_style"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/app_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/splash_text_message"
            android:layout_marginTop="@dimen/stepMargin"
            style="@style/splash_message_style"
            app:layout_constraintTop_toBottomOf="@id/app_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/app_credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/splash_text_credits"
            android:layout_marginTop="@dimen/stepMargin"
            style="@style/splash_credits_style"
            app:layout_constraintTop_toBottomOf="@id/app_message"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

