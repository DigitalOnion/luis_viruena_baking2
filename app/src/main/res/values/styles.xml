<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_splash</item>
    </style>

    <style name="step_name">
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">@dimen/stepNameTextSize</item>
        <item name="android:layout_marginTop">@dimen/stepMargin</item>
    </style>

    <style name="step_full_description">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/stepFullDescriptionTextSize</item>
        <item name="android:layout_marginTop">@dimen/stepMargin</item>
    </style>

    <style name="splash_title_style" parent="AppTheme">
        <item name="fontFamily">sans-serif-black</item>\
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/splash_text_color</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="splash_message_style" parent="splash_title_style">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="splash_credits_style" parent="splash_title_style">
        <item name="android:textSize">24sp</item>
    </style>
</resources>
